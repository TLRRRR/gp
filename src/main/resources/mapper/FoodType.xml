    <select id="queryFoodTypeByName" resultType="FoodType">
        SELECT *
        FROM foodtype
        WHERE name = #{name}
    </select>

<!--    查询所有事物分类-->
    <select id="queryAllFoodType" resultType="FoodType">
        SELECT *
        FROM foodtype
    </select>

    <!--添加食物类型-->
    <insert id="addFoodType">
        INSERT INTO foodtype(name)
        VALUES (#{name})
    </insert>

    <!--删除食物类型-->
    <delete id="deleteFoodInfoById">
        DELETE
        FROM foodtype
        WHERE id =
        #{id}
    </delete>

    <!--更新食物类型-->
    <update id="updateFoodType">
        UPDATE foodtype
        SET name=#{name}
            where id = #{id}
    </update>

