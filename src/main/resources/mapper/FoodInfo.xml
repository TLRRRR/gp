<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wang.gp.dao.FoodInfoDao">

    <!--根据title查询foodinfo-->
    <select id="queryFoodInfoByTitle" resultType="FoodInfo">
        SELECT *
        FROM foodinfo
        WHERE title = #{title}
    </select>

    <!--查询所有foodinfo-->
    <select id="queryFoodInfo" resultType="FoodInfo">
        SELECT *
        FROM foodinfo
    </select>

    <!--添加食物信息-->
    <insert id="addFoodInfo">
        INSERT INTO foodinfo(title, content, date, flag ,typeId)
        VALUES (#{title}, #{content}, #{date}, #{flag}, #{typeId})
    </insert>

    <!--删除食物信息-->
    <delete id="deleteFoodInfoByTitle">
        DELETE
        *
        FROM foodinfo
        WHERE title =
        #{title}
    </delete>

    <!--更新食物信息-->
    <update id="updateFoodInfo">
        UPDATE foodinfo
        SET date=#{date},
            content=#{content},
            where title = #{title}
    </update>

</mapper>