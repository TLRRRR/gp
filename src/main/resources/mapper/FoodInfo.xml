<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wang.gp.dao.FoodInfoDao">

    <!--根据title查询foodinfo-->
    <select id="queryFoodInfoByTitle" resultType="FoodInfo">
        SELECT *
        FROM foodinfo
        WHERE title = #{title}
    </select>

    <!--根据id查询foodinfo-->
    <select id="queryFoodInfoById" resultType="FoodInfo">
        SELECT *
        FROM foodinfo
        WHERE id = #{id}
    </select>

    <!--根据id升序查询foodinfo-->
    <select id="queryFoodInfoByIdAsc" resultType="FoodInfo">
        SELECT *
        FROM foodinfo
        WHERE id = #{id}
    </select>

    <!--查询所有foodinfo-->
    <select id="queryFoodInfo" resultType="FoodInfo">
        SELECT *
        FROM foodinfo
    </select>

    <!--根据用户查询foodinfo-->
    <select id="queryFoodinfoByUsername" resultType="FoodInfo">
        SELECT *
        FROM foodinfo
        where author = #{userName}
    </select>

    <!--添加食物信息-->
    <insert id="addFoodInfo">
        INSERT INTO foodinfo(title, content, date, flag, typew, description, author)
        VALUES (#{title}, #{content}, #{date}, #{flag}, #{typew}, #{description}, #{author})
    </insert>

    <!--删除食物信息-->
    <delete id="deleteFoodInfoByTitle">
        DELETE
        FROM foodinfo
        WHERE title =
              #{title}
    </delete>

    <!--删除食物信息-->
    <delete id="deleteFoodinfoById">
        DELETE
        FROM foodinfo
        WHERE id =
              #{id}
    </delete>

    <!--更新食物信息-->
    <update id="updateFoodInfo">
        UPDATE foodinfo
        SET title=#{title},
            content=#{content},
            flag=#{flag},
            typeid=#{typeid}
        where id = #{id}
    </update>

    <!--查询所有foodinfo类型-->
    <select id="showInfotype" resultType="FoodType">
        SELECT *
        FROM foodtype
    </select>
</mapper>